<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.freerdp.freerdpcore.presentation.FiwoServerSettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/textFiWoAddress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000"
            android:text="FiWo伺服器位置"
            android:layout_marginTop="1dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editFIWOaddress"
            android:gravity="center"
            android:textColor="#000"
            android:textAppearance="?android:attr/textAppearanceSmallInverse"
            android:editable="true"
            android:background="#ffffff"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp" />
        <TextView
            android:id="@+id/textFiWoAddressExample"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#c1b7b7"
            android:text="範例 : fiwoserver.cesbg.foxconn, 10.62.8.234"
            android:layout_marginTop="1dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="確定"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:id="@+id/btnFiwoServerSummit"
                android:background="@drawable/btn_submit"
                android:layout_marginLeft="30dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:id="@+id/btnFiwoServerCannel"
                android:background="@drawable/btn_cancel"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
