<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg_5inch"
    tools:context="com.freerdp.freerdpcore.presentation.LoginActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="right"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgBtn_Network"
                    android:layout_alignParentRight="true"
                    android:background="#00000000"
                    android:src="@drawable/icon_networking"
                    android:layout_marginTop="10dp"
                    android:clickable="true" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:id="@+id/imgBtn_Info"
                    android:background="#00000000"
                    android:src="@drawable/icon_info"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:clickable="true" />
            </LinearLayout>

            <EditText
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:id="@+id/editAccount"
                android:layout_marginLeft="340dp"
                android:layout_marginTop="80dp"
                android:textAppearance="?android:attr/textAppearanceSmallInverse"
                android:editable="true"
                android:hint="Account"
                android:lines="1"
                android:singleLine="true"
                android:textSize="14dp"
                android:imeOptions="actionDone"
                android:background="@drawable/edittext_border"
                />

            <EditText
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editPassword"
                android:layout_marginLeft="340dp"
                android:layout_marginTop="8dp"
                android:textAppearance="?android:attr/textAppearanceSmallInverse"
                android:hint="Password"
                android:lines="1"
                android:singleLine="true"
                android:textSize="14dp"
                android:imeOptions="actionDone"
                android:background="@drawable/edittext_border"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/locationSpinner"
                    android:layout_width="158dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="335dp"
                    android:spinnerMode="dialog"
                    android:textColor="@android:color/black"
                    android:textSize="14dp"
                    style="@android:style/Widget.Holo.Light.Spinner"
                    android:layout_marginTop="-5dp" />
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="0dp"
                    android:id="@+id/ImgBtnReload"
                    android:src="@drawable/icon_refresh"
                    android:background="#00000000"
                    android:visibility="invisible"
                     />
            </LinearLayout>
            <Button
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginLeft="339dp"
                android:layout_marginTop="0dp"
                android:text="Login"
                android:textColor="#ffffff"
                android:textAppearance="?android:attr/textAppearanceSmallInverse"
                android:textSize="14dp"
                android:background="@drawable/btn_bg_grey"
                android:id="@+id/loginbutton"
                android:enabled="false"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
