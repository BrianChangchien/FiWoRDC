<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/grid_single_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_pool_not_default">
    </ImageView>

    <TextView
        android:id="@+id/grid_single_text"
        android:layout_width="130dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="150dp"
        android:textSize="20sp"

        android:text="TJB公有池\n(公共桌面池)"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_alignRight="@+id/grid_single_image"
        android:layout_alignLeft="@+id/grid_single_image">
    </TextView>

</RelativeLayout>
